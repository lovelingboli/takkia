dict_1 = {
    "王力宏":{
        "部门": "科技部",
        "工资": 3000,
        "级别": 1
    },
    "周杰伦":{
        "部门": "市场部",
        "工资": 5000,
        "级别": 2
    },
    "刘德华":{
        "部门": "市场部",
        "工资": 4000,
        "级别": 1
    }

}
for name in dict_1:
    print(name)
    if dict_1[name]["级别"] == 1:
        dict_1[name]["级别"] += 1
        dict_1[name]["工资"] += 1000
print(dict_1)
